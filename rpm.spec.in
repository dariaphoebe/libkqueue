%define _builddir ./
%define _rpmdir ./
%define _rpmfilename %%{NAME}-%%{VERSION}-%%{RELEASE}.%%{ARCH}.rpm

Name:       @@PROGRAM@@
Summary:    @@PKG_SUMMARY@@
Version:    @@VERSION@@
Release:    1
License:    @@LICENSE@@
Vendor:     @@AUTHOR@@
Group:      System Environment/Libraries
Source0:   %{name}-%version.tar.gz
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-build

%description
@@PKG_DESCRIPTION@@

%prep
#echo %_target
#echo %_target_alias
#echo %_target_cpu
#echo %_target_os
#echo %_target_vendor
echo Building %{name}-%{version}-%{release}

%setup -q -n %{name}-%{version}

%build
make

%install
make DESTDIR=%buildroot install

%clean
[ ${RPM_BUILD_ROOT} != "/" ] && rm -rf ${RPM_BUILD_ROOT}

%post
/sbin/ldconfig

%postun
/sbin/ldconfig

%files
%defattr(-,root,root)

